<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/title"/>
    <com.example.practice.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.example.practice.TitleLayout>



    <Button
        android:id="@+id/button_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="304dp"
        android:layout_y="525dp"
        android:text="计算器" />

    <Button

        android:id="@+id/button_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="175dp"
        android:layout_y="170dp"
        android:text="Switch" />

    <Button
        android:id="@+id/button_mEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="319dp"
        android:text="写了啥" />

    <Button
        android:id="@+id/button_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="174dp"
        android:layout_y="107dp"
        android:text="隐藏/显示" />

    <Button
        android:id="@+id/button_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="158dp"
        android:layout_y="306dp"
        android:text="Loading"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="525dp"
        android:text="Warning"
        android:background="@drawable/buttons"/>


    <EditText
        android:id="@+id/mEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="255dp"
        android:hint="随便输输......"
        android:maxLines="2" />

    <ProgressBar
        android:id="@+id/progresbar_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="399dp">

    </ProgressBar>

    <ProgressBar
        android:id="@+id/progressbar_line"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="76dp"
        android:layout_y="395dp"
        android:visibility="gone">

    </ProgressBar>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="148dp"
        android:layout_height="147dp"
        android:layout_x="13dp"
        android:layout_y="71dp"
        android:visibility="visible"
        app:srcCompat="@drawable/astronaut" />


</AbsoluteLayout>